{
  "name": "slf4ts-cassandra-log-adapter",
  "description": "Cassandra logging-adapter for slf4ts-api",
  "homepage": "https://github.com/rstiller/slf4ts",
  "version": "1.1.5",
  "main": "./build/packages/slf4ts-cassandra-log-adapter/lib/slf4ts/index.js",
  "typings": "./build/packages/slf4ts-cassandra-log-adapter/lib/slf4ts/index.d.ts",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rstiller/slf4ts"
  },
  "keywords": [
    "typescript",
    "logging",
    "cassandra"
  ],
  "peerDependencies": {
    "cassandra-driver": ">=3.5.0",
    "slf4ts-api": ">=1.1.3"
  },
  "dependencies": {
    "cassandra-driver": "^4.1.0",
    "slf4ts-api": "^1.2.4",
    "source-map-support": "^0.5.13"
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npm run clean && npm run lint && npm run compile",
    "sign": "pkgsign sign .",
    "clean": "rimraf build coverage",
    "compile": "tsc -p .",
    "compodoc": "compodoc lib",
    "coverage": "nyc npm run test",
    "deps": "npm-check --ignore @types/* --no-spinner --no-emoji --no-color",
    "lint": "tslint -c ../../tslint.json lib/**/*.ts test/**/*.ts",
    "precompodoc": "npm run coverage",
    "prepublishOnly": "npm run build",
    "test": "mocha --opts mocha.opts"
  },
  "precommit": "sign",
  "compodoc": {
    "tsconfig": "./tsconfig.json",
    "output": "./docs",
    "disableGraph": true,
    "unitTestCoverage": "./coverage/coverage-summary.json"
  },
  "nyc": {
    "include": [
      "lib/*.ts",
      "lib/**/*.ts"
    ],
    "exclude": [
      "test/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [],
    "reporter": [
      "json-summary"
    ],
    "all": true
  }
}
