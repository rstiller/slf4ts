{
  "name": "slf4ts-console",
  "version": "1.0.2",
  "main": "./build/lib/slf4ts/index.js",
  "typings": "./build/lib/slf4ts/index.d.ts",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rstiller/slf4ts-console"
  },
  "keywords": [
    "typescript",
    "logging"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.5.2",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.16",
    "npm-check": "^5.7.1",
    "nyc": "^13.0.0",
    "rimraf": "^2.6.2",
    "testdouble": "^3.8.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "slf4ts-api": "^1.1.1",
    "source-map-support": "^0.5.6"
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  },
  "files": [
    ".slf4ts-binding",
    "build",
    "lib",
    "test",
    "mocha.opts",
    "tsconfig.json",
    "tslint.json"
  ],
  "scripts": {
    "check:lint": "tslint -c tslint.json lib/**/*.ts test/**/*.ts",
    "check:coverage": "nyc npm run test:jenkins",
    "check:deps": "npm-check --ignore @types/* --no-spinner --no-emoji --no-color",
    "clean": "rimraf build coverage",
    "compile": "tsc -p .",
    "build": "npm run clean && npm run compile",
    "prepublishOnly": "npm run build",
    "test": "mocha --opts mocha.opts",
    "test:jenkins": "mocha --opts mocha.jenkins.opts"
  },
  "nyc": {
    "include": [
      "lib/*.ts",
      "lib/**/*.ts"
    ],
    "exclude": [
      "test/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [],
    "reporter": [
      "json",
      "html",
      "cobertura"
    ],
    "all": true
  }
}
