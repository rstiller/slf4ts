{
  "name": "slf4ts-console",
  "version": "1.0.1",
  "main": "./build/lib/slf4ts/index.js",
  "typings": "./build/lib/slf4ts/index.d.ts",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rstiller/slf4ts-console"
  },
  "keywords": [
    "typescript",
    "logging"
  ],
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.5.1",
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "mocha-typescript": "^1.1.12",
    "npm-check": "^5.5.2",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "testdouble": "^3.2.6",
    "ts-node": "^4.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "slf4ts-api": "^1.1.0",
    "source-map-support": "^0.5.0"
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  },
  "files": [
    ".slf4ts-binding",
    "build",
    "lib",
    "test",
    "mocha.opts",
    "tsconfig.json",
    "tslint.json"
  ],
  "scripts": {
    "check:lint": "tslint -c tslint.json lib/**/*.ts test/**/*.ts",
    "check:coverage": "nyc npm run test:jenkins",
    "check:deps": "npm-check --ignore @types/* --no-spinner --no-emoji --no-color",
    "clean": "rimraf build coverage",
    "compile": "tsc -p .",
    "build": "npm run clean && npm run compile",
    "prepublishOnly": "npm run build",
    "test": "mocha --opts mocha.opts",
    "test:jenkins": "mocha --opts mocha.jenkins.opts"
  },
  "nyc": {
    "include": [
      "lib/*.ts",
      "lib/**/*.ts"
    ],
    "exclude": [
      "test/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [],
    "reporter": [
      "json",
      "html",
      "cobertura"
    ],
    "all": true
  }
}
