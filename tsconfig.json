{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": false,
        "alwaysStrict": true,
        "declaration": true,
        "module": "none",
        "target": "es2017",
        "sourceMap": true,
        "newLine": "LF",
        "moduleResolution": "node",
        "noLib": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/reflect-metadata"
        ],
        "types": [
            "mocha", "chai", "node"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "sourceRoot": "./packages/*/lib/",
        "rootDir": "./",
        "charset": "utf-8",
        "outDir": "build/"
    },
    "exclude": [
        "node_modules",
        "**/*.d.ts"
    ]
}
