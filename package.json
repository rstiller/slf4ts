{
    "name": "slf4ts",
    "private": true,
    "devDependencies": {
        "@types/cassandra-driver": "^4.0.3",
        "@types/chai": "^4.1.7",
        "@types/chai-string": "^1.4.1",
        "@types/elasticsearch": "^5.0.33",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.0.4",
        "chai": "^4.2.0",
        "chai-string": "^1.5.0",
        "event-stream": "3.3.4",
        "lerna": "^3.14.1",
        "mocha": "^6.1.4",
        "mocha-typescript": "^1.1.17",
        "nyc": "^14.1.1",
        "pkgsign": "^0.1.3",
        "pre-commit": "1.2.2",
        "rimraf": "^2.6.3",
        "testdouble": "^3.11.0",
        "ts-node": "^8.2.0",
        "tslint": "^5.17.0",
        "typescript": "^3.5.1"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "sign": "lerna run sign && git add packages/*/signature.json",
        "clean": "lerna run clean",
        "compile": "lerna run compile",
        "coverage": "lerna run coverage",
        "deps": "lerna run deps",
        "lint": "lerna run lint",
        "publish": "lerna publish",
        "publish-dry-run": "lerna publish --skip-npm --no-git-tag-version --no-push",
        "pretest": "lerna run compile --scope slf4ts-api",
        "publishDocs": "cd docs && git add --all . && git commit -nm 'Deploy to gh-pages' && git push origin gh-pages && cd ..",
        "prepublishDocs": "docker-compose run --rm docs",
        "test": "lerna run test"
    },
    "precommit": "sign"
}
