{
    "name": "slf4ts",
    "private": true,
    "devDependencies": {
        "@compodoc/compodoc": "^1.1.7",
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.10",
        "lerna": "^3.6.0",
        "rimraf": "^2.6.2",
        "ts-node": "^7.0.1",
        "typescript": "^3.1.6"
    },
    "scripts": {
        "bootstrap": "lerna exec npm install && lerna link",
        "clean": "rimraf docs build",
        "compile": "tsc -p .",
        "compodoc": "compodoc -p packages/slf4ts-api/tsconfig.json -p packages/slf4ts-console/tsconfig.json",
        "pretest": "lerna run compile --scope slf4ts-api",
        "publishDocs": "cd docs && git add --all . && git commit -m 'Deploy to gh-pages' && git push origin gh-pages && cd ..",
        "precompodoc": "lerna run compodoc",
        "prepublishDocs": "npm run compodoc",
        "test": "lerna run test"
    },
    "compodoc": {
        "output": "docs",
        "disableGraph": true,
        "exportFormat": "json"
    }
}
