{
    "name": "slf4ts",
    "private": true,
    "devDependencies": {
        "@types/chai": "^4.2.7",
        "@types/chai-string": "^1.4.2",
        "@types/elasticsearch": "^5.0.36",
        "@types/mocha": "^5.2.7",
        "@types/node": "^13.1.1",
        "chai": "^4.2.0",
        "chai-string": "^1.5.0",
        "husky": "2.4.1",
        "lerna": "^3.20.0",
        "lodash": "^4.17.15",
        "mocha": "^6.2.2",
        "mocha-typescript": "^1.1.17",
        "nyc": "^15.0.0",
        "pkgsign": "^0.2.0",
        "rimraf": "^3.0.0",
        "testdouble": "^3.12.4",
        "ts-node": "^8.5.4",
        "tslint": "^5.20.1",
        "typescript": "^3.7.4"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "sign": "lerna run sign && git add packages/*/signature.json",
        "clean": "lerna run clean",
        "compile": "lerna run compile",
        "coverage": "lerna run coverage",
        "deps": "lerna run deps",
        "lint": "lerna run lint",
        "publish": "lerna publish",
        "publish-dry-run": "lerna publish --skip-npm --no-git-tag-version --no-push",
        "pretest": "lerna run compile --scope slf4ts-api",
        "publishDocs": "cd docs && git add --all . && git commit -nm 'Deploy to gh-pages' && git push origin gh-pages && cd ..",
        "prepublishDocs": "docker-compose run --rm docs",
        "test": "lerna run test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run sign"
        }
    }
}
